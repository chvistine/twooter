{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single", {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }],
        "semi": ["error","never"],
        "complexity": ["error", 5],
        "valid-jsdoc": "error",
        "eqeqeq": "error",
        "no-param-reassign": "error",
        "no-undefined": "error",
        "max-lines-per-function": ["error", {
          "max": 40,
          "skipBlankLines": true,
          "skipComments": true
        }],
        "no-console": ["error", {
          "allow": ["warn", "error", "log"]
        }]
    }
}